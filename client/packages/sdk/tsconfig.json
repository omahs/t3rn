{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ESNext",
    "sourceMap": true,
    "lib": [
      "esnext", "es6", "es2018"
    ],
    "esModuleInterop": true,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
  },
  "references": [],
  "exclude": ["node_modules", "dist", "*.d.ts"],
}